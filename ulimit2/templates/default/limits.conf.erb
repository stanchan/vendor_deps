# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.

<% @limits.each do |user, attr| -%>
  <% user == 'default' ? user = '*' : nil -%>
  <% attr.each do |k, v| -%>
    <% if v.is_a? Hash -%>
      <% v.each do |type, val| -%>
<%= "#{user}	#{type}	#{k}	#{val}" %>
      <% end -%>
    <% else -%>
<%= "#{user}	-	#{k}	#{v}" %>
    <% end -%>
  <% end -%>
<% end -%>
